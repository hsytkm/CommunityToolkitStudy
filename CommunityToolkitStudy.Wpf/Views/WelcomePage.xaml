<controls:MyPageControlBase
    x:Class="CommunityToolkitStudy.Wpf.Views.Mvvm.Messaging.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CommunityToolkitStudy.Wpf.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <TextBlock
            Margin="0,10"
            FontSize="{StaticResource FontSizeTitle}"
            Text="Study of .NET Community Toolkit (WPF)" />

        <TextBlock Margin="10" FontSize="{StaticResource FontSizeLarge}">
            <Hyperlink NavigateUri="https://github.com/hsytkm/CommunityToolkitStudy" RequestNavigate="RequestNavigate">
                https://github.com/hsytkm/CommunityToolkitStudy
            </Hyperlink>
        </TextBlock>

        <TextBlock
            Margin="20"
            FontSize="{StaticResource FontSizeMiddle}"
            LineHeight="24">
            ・ Using CommunityToolkit.Mvvm and Microsoft.Extensions.DependencyInjection<LineBreak />
            ・ Created in the summer of 2022<LineBreak />
            ・ .NET6.0 + C#10<LineBreak />
        </TextBlock>

    </StackPanel>
</controls:MyPageControlBase>
